---
interface Props {
  href: string;
  title: string;
  description: string;
  icon: string;
  external?: boolean;
}

const { href, title, description, icon, external = false } = Astro.props;
---

<a href={href} class="flex flex-col p-6 bg-white rounded-xl shadow-lg transition-all duration-300 no-underline text-inherit hover:-translate-y-2 hover:shadow-xl" {...(external ? { target: "_blank", rel: "noopener noreferrer" } : {})}>
    <div class="flex items-center gap-2 mb-4">
        <div class="text-blue-600">
            {icon && <i class={`${icon} fa-xl`} />}
        </div>
        <h3 class="text-gray-800">{title}</h3>
    </div>
    <p class="m-0 text-gray-600 flex-grow">{description}</p>
</a>